{% extends 'base.html.twig' %}

{% block body %}


    <div class="container-fluid">
        <hr>
        {% if message %}
            <div class="alert alert-success alert-block"> <a class="close" data-dismiss="alert" href="#">Ã—</a>
                <h4 class="alert-heading">boas noticias,</h4>
                {{ message }}. </div>

        {% endif %}
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"><span class="icon">  </span>
                        <h3>Criar tarefas</h3>
                    </div>
                    <div class="widget-content nopadding">
                        <form id="form-wizard" action="task/new" class="form-horizontal" method="post">
                            <div id="form-wizard-1" class="step">
                                <div class="control-group">
                                    <label class="control-label">nome da tarefa</label>
                                    <div class="controls">
                                        <input id="username" type="text" name="name"/>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">status</label>
                                    <div class="controls">
                                        <input id="password" type="text" name="status"/>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">seu nome</label>
                                    <div class="controls">
                                        <input id="password2" type="text" name="user"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <input id="back" class="btn btn-primary" type="reset" value="voltar"/>
                                <input id="next" class="btn btn-success" type="submit" value="salvar"/>
                                <div id="status"></div>
                            </div>
                            <div id="submitted"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}

